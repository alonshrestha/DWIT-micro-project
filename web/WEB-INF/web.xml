<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>root</servlet-name>
        <servlet-class>com.practice.controller.RootServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>root</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>com.practice.controller.UserRegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.practice.controller.UserLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>List</servlet-name>
        <servlet-class>com.practice.controller.UserListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>List</servlet-name>
        <url-pattern>/listUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>List</servlet-name>
        <url-pattern>/editUser</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>List</servlet-name>
        <url-pattern>/deleteUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditUserServlet</servlet-name>
        <servlet-class>com.practice.controller.UserEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditUserServlet</servlet-name>
        <url-pattern>/editUserGet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SendMail</servlet-name>
        <servlet-class>com.practice.controller.SendMailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SendMail</servlet-name>
        <url-pattern>/sendDetail</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>InternetStatus</servlet-name>
        <servlet-class>com.practice.controller.InternetStatusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InternetStatus</servlet-name>
        <url-pattern>/checkStatus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InternetStatus</servlet-name>
        <url-pattern>/httpStatus</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>HostServlet</servlet-name>
        <servlet-class>com.practice.controller.HostServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HostServlet</servlet-name>
        <url-pattern>/regHost</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>HostServlet</servlet-name>
        <url-pattern>/regServer</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>HostServlet</servlet-name>
        <url-pattern>/regHost1</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>HostServlet</servlet-name>
        <url-pattern>/regServer1</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>HostServlet</servlet-name>
        <url-pattern>/listHost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HostServlet</servlet-name>
        <url-pattern>/deleteHost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HostServlet</servlet-name>
        <url-pattern>/editHost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HostServlet</servlet-name>
        <url-pattern>/editServer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HostServlet</servlet-name>
        <url-pattern>/deleteServer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HostServlet</servlet-name>
        <url-pattern>/editHostPost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HostServlet</servlet-name>
        <url-pattern>/editServerPost</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>HostServlet</servlet-name>
        <url-pattern>/listReports</url-pattern>
    </servlet-mapping>


</web-app>

