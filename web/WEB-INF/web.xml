<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <!--<welcome-file>index.jsp</welcome-file>-->
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>com.Practice.controller.UserRegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.Practice.controller.UserLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>List</servlet-name>
        <servlet-class>com.Practice.controller.UserListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>List</servlet-name>
        <url-pattern>/listUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>List</servlet-name>
        <url-pattern>/editUser</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>List</servlet-name>
        <url-pattern>/deleteUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditUserServlet</servlet-name>
        <servlet-class>com.Practice.controller.UserEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditUserServlet</servlet-name>
        <url-pattern>/editUserGet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SendMail</servlet-name>
        <servlet-class>com.Practice.controller.SendMailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SendMail</servlet-name>
        <url-pattern>/sendDetail</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>InternetStatus</servlet-name>
        <servlet-class>com.Practice.controller.InternetStatusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InternetStatus</servlet-name>
        <url-pattern>/checkStatus</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>HostServlet</servlet-name>
        <servlet-class>com.Practice.controller.HostServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HostServlet</servlet-name>
        <url-pattern>/regHost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HostServlet</servlet-name>
        <url-pattern>/addHost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HostServlet</servlet-name>
        <url-pattern>/listHost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HostServlet</servlet-name>
        <url-pattern>/deleteHost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HostServlet</servlet-name>
        <url-pattern>/editHost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HostServlet</servlet-name>
        <url-pattern>/editHostPost</url-pattern>
    </servlet-mapping>
</web-app>

